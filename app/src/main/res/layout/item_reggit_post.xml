<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="16dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Reddit post text" />

    <ImageView
        android:id="@+id/star_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:contentDescription="@string/description_star_iv"
        android:src="@drawable/ic_baseline_star_border_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/score_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/star_iv"
        app:layout_constraintStart_toEndOf="@+id/star_iv"
        app:layout_constraintTop_toTopOf="@+id/star_iv"
        tools:text="256" />

    <ImageView
        android:id="@+id/messages_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="70dp"
        android:contentDescription="@string/description_messages_iv"
        android:src="@drawable/ic_baseline_message_24"
        app:layout_constraintBottom_toBottomOf="@+id/star_iv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/star_iv" />

    <TextView
        android:id="@+id/messages_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/messages_iv"
        app:layout_constraintStart_toEndOf="@+id/messages_iv"
        app:layout_constraintTop_toTopOf="@+id/messages_iv"
        tools:text="12313" />

</androidx.constraintlayout.widget.ConstraintLayout>